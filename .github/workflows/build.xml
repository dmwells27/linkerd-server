name: Build App

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]


jobs:
  build:

    runs-on: self-hosted

    strategy:
      matrix:
        node-version: [12.x]

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Node.js ${{ matrix.node-version }}
        uses: actions/setup-node@v1
        with:
          node-version: ${{ matrix.node-version }}

      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          registry: core.harbor.domain
          username: ${{ secrets.HARBOR_USER }}
          password: ${{ secrets.HARBOR_TOKEN }}

      - name: Build and push
        uses: docker/build-push-action@v6
        id: docker-build
        with:
          push: true
          tags: core.harbor.domain/library/linkerd-server:latest

      - name: Display SHA
        run: echo ${{ steps.docker-build.outputs.digest }}

      - name: Display Image
        run: echo ${{ steps.docker-build.outputs.imageid }}

      - name: Install Cosign
        uses: sigstore/cosign-installer@v3.10.0

#      - name: Sign image with Cosign
#        run: |
#          cosign sign --key k8s://secured/cosign-key core.harbor.domain/library/linkerd-server@${{ steps.docker-build.outputs.digest }}
      - name: Sign image with Cosign
        run: |
          echo "${{ secrets.COSIGN_PRIVATE_KEY }}" > cosign.key
          echo "Encoded secret: $(cat  cosign.key | base64)"
          cosign sign core.harbor.domain/library/linkerd-server@${{ steps.docker-build.outputs.digest }} --key cosign.key --tlog-upload=false
        env:
          # Set the password from a secret (leave blank if no password was set)
          COSIGN_PASSWORD: ${{ secrets.COSIGN_PASSWORD }}
          COSIGN_REGISTRY_USERNAME: ${{ secrets.HARBOR_USER }}
          COSIGN_REGISTRY_PASSWORD: ${{ secrets.HARBOR_TOKEN }}